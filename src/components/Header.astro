---
// import logo images in a variable logo, and in the <img> tags, we use src={logo}
// this is called dynamic rendering, because we are rendering in runtime, I guess
import logo from '../images/ladybug3.svg';
---
<div class="header">
    <div class="headerL">
        <div class="logo">
            <a href="/">
                <img src={logo} width=45 alt="" />
            </a>
        </div>
    </div>
    <div class="headerC">
        <ul>
            <li><a href="/">HOME</a></li>
            <li><a href="/research">RESEARCH</a></li>
            <li><a href="/blog">BLOG</a></li>
        </ul>
    </div>
    <div class="headerR">
    </div>
</div>





<style>
/* Header */
/* ------- grid display -------- */
.headerL {
    grid-area: headerL;
}

.logo {
    display: flex;
    justify-content: center;
}


.headerC {
    grid-area: headerC;
    display: flex;
    justify-content: right;
}

.headerC ul {
    display: flex;
    justify-content: right;
    margin: 0.3rem 0 0;
}

.headerC a {
    color: #fff;
    font-size: 1.2rem;
    margin: 0 0 0 2rem;
    font-family: "slkscr";
}

.headerR {
    grid-area: headerR;
}

.header {
    background: var(--color-bg);
    padding: 1.5rem 0;
    /* border-top: solid; */
    border-top-right-radius: 2rem;
    border-top-left-radius: 2rem;
    display: grid;
    grid-template-columns: 15% 70% 15%;
    grid-template-rows: auto;
    grid-template-areas: 
        "headerL headerC headerR"
}

</style>
