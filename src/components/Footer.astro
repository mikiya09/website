
---
// import Glowing Loader CSS Object
import GlowingLoader from './cssItems/GlowingLoader.astro'
---

<footer class="footer">
    <div class="footerL">
    </div>
    <div class="footerC">
        <div class="animation">
            <div class="loader-box">
                <GlowingLoader />
                <div class="loader-text">
                    <p>back to the top</p>
                </div>
            </div>
        </div>
        <div class="information">
            <div class="resource">
                <h3>Resource</h3>
                <div><a href="/">Computer Science</a></div>
                <div><a href="/">Psychology</a></div>
                <div><a href="/">Mathematics</a></div>
            </div>
            <div class="interest">
                <h3>Interests</h3>
                <div><a href="/">Visual</a></div>
                <div><a href="/">Auditory</a></div>
                <div><a href="/">Idea</a></div>
            </div>
            <div class="contact">
                <h3>Contact</h3>
                <div><a href="/">+1</a></div>
                <div><a href="/">New York, NY</a></div>
                <div><a href="/">spacelion121319@gmail.com</a>
            </div>
        </div>
    </div>
    <div class="footerR">
    </div>
</footer>



<style>
/* --- nested grid display --- */

.resource {
    grid-area: resource;
}

.interest {
    grid-area: interest;
}

.contact {
    grid-area: contact;
}

.animation {
    grid-area: animation;
}


.animation {
    display: flex;
    justify-content: center;
    align-items: center;
}

.loader-text p {
    position: relative;
    left: 30%;
    text-align: right;
    margin: 0.7rem 0 0;
    /* color: var(--color-black); */
    color: '#000';
}


.information {
    grid-area: information;
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    grid-template-rows: auto;
    grid-template-areas: 
        "resource interest contact"
}


.footerC {
    grid-area: footerC;
    display: grid;
    grid-template-columns: 60% 40%;
    /* grid-template-columns: 20% 20% 20% 40%; */
    grid-template-rows: auto;
    grid-template-areas: 
        "information animation"
}

.information h3 {
    /* text-align: center; */
    padding: 2rem 0 1.5rem;
    color: var(--color-white);
    font-style: italic;
    font-size: 1rem;
}

.resource div {
    padding: 0.6rem 0;
}

.interest div {
    padding: 0.6rem 0;
}

.contact div {
    padding: 0.6rem 0;
}


.information a {
    color: var(--color-white);
    font-style: italic;
    font-weight: 100;
    font-size: 0.8rem;
}

.information a:hover {
    color: var(--color-lightGreen);
}


.footerL {
    grid-area: footerL;
}


.footerR {
    grid-area: footerR;
}


.footer {
    margin: 1.5rem 0 3rem;
    /* border: solid; */
    background: var(--color-bg);
    display: grid;
    grid-template-columns: 15% 70% 15%;
    grid-template-rows: auto;
    grid-template-areas:
        "footerL footerC footerR"
}

/* --- large monitor such as 24 inches --- */
.footer {
    grid-template-columns: 15% 70% 15%;
}


/* large monitor > 24 inches */
@media (max-width: 1700px) {
    .footer {
        grid-template-columns: 12% 76% 12%;
    }
}

/* --- ipad pro --- */
@media (max-width: 1100px) {
    .animation {
        display: none;
    }

    .footerC {
        grid-area: footerC;
        display: grid;
        grid-template-columns: 1fr;
        /* grid-template-columns: 1fr 1fr 1fr; */
        grid-template-rows: auto;
        grid-template-areas: 
            "information"
            "animation"
    }

    .footerC h3 {
        text-align: center;
    }

    .footerC div {
        text-align: center
    }

/* --- iphone --- */
@media (max-width: 690px) {

    .footerC {
        grid-area: footerC;
        display: grid;
        grid-template-columns: 1fr;
        grid-template-rows: auto;
        grid-template-areas: 
            "resource" 
            "interest"
            "contact"
            "animation"
    }

    .information h3 {
        font-size: 0.8rem;
    }

    .resource {
        padding: 0.6rem 0 0;
        border-bottom: solid var(--color-grey);
    }

    .interest {
        padding: 0.6rem 0 0;
        border-bottom: solid var(--color-grey);
    }

    .contact {
        padding: 0.6rem 0 0;
        border-bottom: solid var(--color-grey);
    }
}

</style>
